extends ../welcome.layout.pug

block variables
  - var title = 'Привет!';
  - 
    var socials = [
      ['vk', 'http://vk.com'],
      ['github', 'http://github.com'],
      ['in', 'http://linkedin.com']
    ]
  -
    var page_links = [
      ['Мои работы', 'works.html'],
      ['Обо мне', 'about.html'],
      ['Блог', 'blog.html']
    ]

block content
  .wrapper.welcome-page
    .authorize-btn.welcome-page__authorize
      a.authorize-btn__link(href="#") Авторизоваться
    .welcome-board.welcome-page__board
      .site-card
        +image('photo.png', 'Фотография', 'site-card__photo')
        .site-card__name Владимир Астахов
        .site-card__title Личный сайт веб-разработчика

      .social.welcome-board__social
        ul.social__list.social__list--welcome 
          each item in socials
            li.social__item.social__item--welcome
              a.social__link(href=`${item[1]}`)
                +icon(item[0], 'social__icon')
      //- nav.nav.nav--welcome.welcome-board__nav  // Не знаю, нужен ли класс welcome-board__nav ?
      nav.nav.nav--welcome
        ul.nav__list.nav__list--welcome
          each item in page_links
            li.nav__item.nav__item--welcome
              a.nav__link(href=`${item[1]}`) #{item[0]}
              
    //- Нарушаем БЭМ - позиционируем блок .footer-bottom, но он на всех страницах расположен одинаково (в самом низу)
    .footer-bottom.footer-bottom--welcome 
      +copyright-info
